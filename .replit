modules = ["web", "cpp-clang14", "swift-5.8", "dart-3.8"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["flutter"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flutter Web Dev Server"

[[workflows.workflow]]
name = "Flutter Web Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "flutter run -d web-server --web-hostname=0.0.0.0 --web-port=5000 --dart-define=BACKEND_URL=$BACKEND_URL --dart-define=RAZORPAY_KEY_ID=$RAZORPAY_KEY_ID"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 39943
externalPort = 3000

[[ports]]
localPort = 42203
externalPort = 3001

[deployment]
deploymentTarget = "static"
build = ["flutter", "build", "web"]
publicDir = "build/web"
